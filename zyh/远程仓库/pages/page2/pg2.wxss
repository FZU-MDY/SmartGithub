.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }
  .pic1-1 {
    width:100%;
    filter: brightness(75%);
  }
  .pic3-1{
    position: absolute;
    top:337rpx;
    left:219rpx;
    width: 156rpx;
    height:19rpx;
  }
  .pic3-2{
    position: absolute;
    top:222rpx;
    left:397rpx;
    width: 289rpx;
    height:86.1rpx;
  }

  .shou1{
    position: absolute;
    top: 92%;
    left:40%;
    height:12%;
    width:4%;
    animation: fingerHandle 1s ease infinite both;
  }
  .shou2{
    position: absolute;
    top: 90%;
    left:40%;
    height:6%;
    width:3%;
    animation: circleHide 1s ease infinite both;
  }
  
@keyframes fingerHandle {
  0% {
      transform: none;
  }
  70% {
      transform: scale3d(.8, .8, .8);
  }
  100% {
      transform: none;
  }
}
@keyframes circleHide {
  0% {
      opacity: 0;
      transform: scale3d(0, 0, 0);
  }
  70% {
      opacity: 1;
      transform: scale3d(1.0, 1.0, 1.0);
  }
  100% {
      opacity: 0;
      transform: scale3d(0, 0, 0);
  }
}
  
  
  