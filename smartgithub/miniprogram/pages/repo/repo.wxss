/* pages/homepage/homepage.wxss */
.background_image{
  width: 100%;
  filter: brightness(100%);
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9;
  opacity: 0.1;
}
  /* 弹出层 */
  
.modalDlg {
  width: 250px;
  height: 200px;
  position: fixed;
  top: 15%;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 13rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  z-index: 10;
}
  .flex-around{
  display: flex;
  justify-content: space-around;
  align-items: center;
  }
  /* 弹出层里面的图片 */
  
.image1{
  width: 200px;
  height: 200px;
  margin: 30rpx auto 0 auto;
  z-index: 99;
  position: relative;
  opacity: 0.1;
}
.image2{
  width: 50px;
  height: 50px;
  margin: 30rpx auto 0 auto;
  z-index: 100;
  position: absolute;
}
  
  /* 弹出层里面的按钮 */
  
  .btn {
  width: 50px;
  height: 20px;
  top: 200rpx;
  left: 10rpx;
  background: white;
  line-height: 20px;
  text-align: center;
  color:black;
  font-size: 13px;
  margin: 20rpx auto;
  border: 1px solid black;
  border-radius: 100rpx;
  z-index: 999;
  }
  /* 弹出层里面的文字 */
  
.test1 {
  top: 65px;
  width: 100%;
  text-align: center;
  font-size: 16px;
  margin: 20rpx auto;
  color: #333;
  z-index: 100;
  position: absolute;
  }
  .test2 {
    top: 100px;
    width: 100%;
    text-align: center;
    font-size: 16px;
    margin: 20rpx auto;
    color: #333;
    z-index: 100;
    position: absolute;
    }